
@{
    ViewData["Title"] = "CreateQuiz";
}
<form asp-controller="QuizQ" asp-action="StoreQuestions">

    <p class="bg-dark text-light"> Topic: @TempData.Peek("Topic").ToString()</p>
    <span style="font-size:larger">Question</span>
    <input name="Question" type="text" id="Question" />
    <br />
    <br />
    <h3 class="text-uppercase">option type</h3>
    <input type="button" id="cheBox" value="checkbox" />
    <input type="button" id="radBox" value="radio" />
    <input type="text" id="temp">
    <input type="button" id="UniBut" value="AddOption" />
    <br />
    <div class="inner">
    </div>
    <br />
    <br />
    <input type="button" id="answerBut" value="GetAnswer" />
    <br />
    <br />
    <br />
    <div class="ansDiv">
        <input type="text" id="ans" readonly />
        <input type="text" name="choices" id="choices" hidden />
    </div>
    <input type="submit" value="create Question" />
</form>


    